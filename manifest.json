{
  "manifest_version": 3,
  "name": "Text Converter",
  "version": "1.0",
  "description": "Convert selected English text to Arabic letters based on keyboard layout And the opposite is true .",
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
